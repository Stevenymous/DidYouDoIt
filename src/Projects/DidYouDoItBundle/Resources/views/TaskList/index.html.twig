{% extends '::base.html.twig' %}

{% block body -%}
    <h2 class="text-left">TaskLists</h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>
                <ul class="list-unstyled">
                    <li>
                        <a class="btn btn-info" role="button" href="{{ path('did_you_do_it_get_one_tasklist', { 'id': entity.tasklistid }) }}">Show</a>
                    </li>
                    <li>
                        <a class="btn btn-warning" role="button" href="{{ path('did_you_do_it_edit_tasklist', { 'id': entity.tasklistid }) }}">Edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul class="list-unstyled">
        <li>
            <a class="btn btn-success" role="button" href="{{ path('did_you_do_it_new_tasklist') }}">
                Create a new task list 
            </a>
        </li>
    </ul>
{% endblock %}
